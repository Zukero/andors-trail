<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/dialog_margin"
	android:orientation="vertical"
	>

	<TextView
		android:id="@+id/loadsave_preset_title"
		android:layout_height="wrap_content"
		android:text="@string/inventory_preset_select_prompt"
		android:layout_width="200dp"
		style="@style/titleWithIcon" />

	<TextView
		android:id="@+id/loadsave_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/inventory_preset_select_prompt"
		/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<LinearLayout
			android:id="@+id/loadsave_preset_slot_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			<Button
				android:id="@+id/loadsave_preset_slot_n"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@android:string/unknownName"
				/>
		</LinearLayout>

	</ScrollView>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/presets_editor_box"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:layout_weight="1"
			/>
		<Button
			android:id="@+id/presets_editor_btn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0"
			android:layout_alignParentRight="true"
			/>


	</LinearLayout>

</LinearLayout>
